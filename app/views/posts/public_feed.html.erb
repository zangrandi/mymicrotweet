<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h2>Recent Activity</h2>
    <div id="posts" class="well">
    	<% if @posts.present? %>
	      <%= render "posts", posts: @posts %>
	    <% else %>
	    	<h4 class="text-center text-muted">There's no Activity yet, <%= link_to "Find Users", users_path %>.</h4>
	    <% end -%>
    </div>
  </div>
</div>