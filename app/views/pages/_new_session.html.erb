<%= form_for(:user, url: session_path(:user)) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, class: 'form-control', placeholder: "E-mail", id: "login_user_email" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, class: 'form-control', placeholder: "Password", id: "login_user_password" %>
  </div>

  <div class="row">
    <small>
    <div class="col-md-6">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <div class="col-md-6 text-right">
      <%= link_to "Forgot your password?", new_password_path(:user) %>
    </div>
    </small>
  </div>

  <div class="actions text-right">
    <%= f.submit "Log in", class: "btn", id: "main-login" %>
  </div>
<% end %>